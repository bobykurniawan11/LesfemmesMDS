<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/currentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="2019-07-02 00:00:00"
        android:textSize="16sp" />


    <Button
        android:layout_below="@id/currentDate"
        android:layout_centerHorizontal="true"
        android:id="@+id/goAbsen"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"

        android:background="@drawable/button_bg_round"
        android:padding="15dp"
        android:text="Absen"
        android:textColor="@color/abuabu" />

    <TextView
        android:textSize="16sp"
        android:id="@+id/jamMsktxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goAbsen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Jam Masuk Hari Ini : -" />

    <TextView
        android:text="Jam Keluar Hari Ini : -"
        android:id="@+id/jamKlrtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jamMsktxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/openDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jamKlrtxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="Lihat Data Absensi" />

</RelativeLayout>