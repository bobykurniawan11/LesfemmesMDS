<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >


        <TextView
            android:id="@+id/outlet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ico_machine"
            android:drawableLeft="@drawable/ico_machine"
            android:drawablePadding="10dp"
            android:text="M-BK"
            android:textSize="16sp" />

        <TextView
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@id/outlet"
            android:layout_toRightOf="@id/outlet"
            android:id="@+id/judul_notifikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info Dari Finance"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/status"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/judul_notifikasi"
            android:layout_toRightOf="@id/judul_notifikasi"
            android:layout_width="10dp"
            android:layout_height="10dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
